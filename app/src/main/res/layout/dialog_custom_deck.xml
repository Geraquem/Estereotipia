<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_top_box"
    android:clipChildren="false"
    android:clipToPadding="false">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_box"
        android:backgroundTint="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title"
            style="@style/MediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:textStyle="bold"
            tools:text="Nombre de baraja" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_top">

        <TextView
            android:id="@+id/tv_play"
            style="@style/MediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/click_effect_border"
            android:drawablePadding="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="16dp"
            android:text="@string/custom_decks_dialog_play"
            android:textAllCaps="true"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_play" />

        <TextView
            android:id="@+id/tv_edit_name"
            style="@style/MediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/click_effect_border"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:text="@string/custom_decks_dialog_edit_name"
            android:textAllCaps="true"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_pencil" />

        <TextView
            android:id="@+id/tv_edit_cards"
            style="@style/MediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/click_effect_border"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:text="@string/custom_decks_dialog_edit_cards"
            android:textAllCaps="true"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_card" />

        <TextView
            android:id="@+id/tv_share"
            style="@style/MediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/click_effect_border_blue"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:text="@string/custom_decks_dialog_share"
            android:textAllCaps="true"
            android:textColor="@color/blue"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_share"
            app:drawableTint="@color/blue" />

        <TextView
            android:id="@+id/tv_delete"
            style="@style/MediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/click_effect_border_red"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:text="@string/custom_decks_dialog_delete"
            android:textAllCaps="true"
            android:textColor="@color/red"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_trash"
            app:drawableTint="@color/red" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>