<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_error"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        style="@style/BigTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="@string/tpm_dialog_questions_title"
        android:textAllCaps="true" />

    <TextView
        style="@style/MediumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/tpm_dialog_questions_txt_one" />

    <TextView
        style="@style/MediumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tpm_dialog_questions_txt_two" />

    <TextView
        style="@style/MediumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tpm_dialog_questions_txt_three" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginVertical="24dp"
        android:contentDescription="@string/content_description"
        android:src="@drawable/iv_tpm_questions" />

    <TextView
        style="@style/MediumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/tpm_dialog_questions_warning" />

    <TextView
        android:id="@+id/btn_continue"
        style="@style/MediumTextView_Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_soft_green"
        android:elevation="6dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/tpm_dialog_select_continue"
        android:textAllCaps="true"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/gl_center"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>