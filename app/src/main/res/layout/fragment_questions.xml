<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingHorizontal="24dp"
    android:paddingTop="82dp"
    android:paddingBottom="32dp">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tv_new_question"
            style="@style/MediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:background="@drawable/bg_white_box"
            android:elevation="3dp"
            android:foreground="?attr/selectableItemBackground"
            android:paddingHorizontal="12dp"
            android:paddingVertical="16dp"
            android:text="@string/questions_do_question" />

        <TextView
            style="@style/MediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:background="@drawable/bg_white_box"
            android:elevation="3dp"
            android:foreground="?attr/selectableItemBackground"
            android:paddingHorizontal="12dp"
            android:paddingVertical="16dp"
            android:text="@string/questions_list_of" />

        <TextView
            style="@style/MediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/bg_white_box"
            android:elevation="3dp"
            android:foreground="?attr/selectableItemBackground"
            android:paddingHorizontal="12dp"
            android:paddingVertical="16dp"
            android:text="@string/questions_my_card" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:alpha="0.8">

            <FrameLayout
                android:id="@+id/fl_left"
                android:layout_width="28dp"
                android:layout_height="0.75dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_mini_help"
                style="@style/SmallTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/questions_mini_help"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/fl_left"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0.75dp"
                android:layout_marginStart="12dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_mini_help"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/MediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_box"
            android:drawablePadding="8dp"
            android:elevation="3dp"
            android:foreground="?attr/selectableItemBackground"
            android:paddingHorizontal="12dp"
            android:paddingVertical="16dp"
            android:text="@string/questions_what_now"
            app:drawableEndCompat="@drawable/ic_instructions" />

    </LinearLayout>

    <!--    Hacer nueva pregunta-->
