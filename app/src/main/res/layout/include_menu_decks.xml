<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_box"
    android:paddingHorizontal="12dp"
    android:paddingVertical="18dp">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_all_cards"
            style="@style/MediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/menu_my_decks"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            style="@style/MediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/menu_my_decks_description"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_my_decks"
            style="@style/MediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_white_box_line"
            android:drawablePadding="8dp"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:text="@string/menu_my_decks_mine"
            android:textAllCaps="true"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_deck" />

        <TextView
            android:id="@+id/tv_create_deck"
            style="@style/MediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_white_box_line"
            android:drawablePadding="8dp"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:text="@string/menu_my_decks_create"
            android:textAllCaps="true"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_add" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>