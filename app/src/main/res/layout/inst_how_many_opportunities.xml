<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/Instructions_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/instructions_how_many_opportunities_details_1"
        android:textSize="18sp" />

    <TextView
        style="@style/Instructions_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/instructions_how_many_opportunities_details_2"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:contentDescription="@string/content_description"
        android:src="@color/black" />

    <TextView
        style="@style/Instructions_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/instructions_how_many_opportunities_details_3"
        android:textSize="18sp" />

    <TextView
        style="@style/Instructions_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/instructions_how_many_opportunities_details_4"
        android:textSize="18sp" />

    <TextView
        style="@style/Instructions_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/instructions_how_many_opportunities_details_5"
        android:textSize="18sp" />

    <TextView
        style="@style/Instructions_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/instructions_how_many_opportunities_details_6"
        android:textSize="18sp" />

</LinearLayout>